<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">#3E000000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!--  Use the colors as here: https://github.com/material-components/material-components-android/blob/master/docs/theming/Color.md  -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.Material3.DayNight.Dialog" />

    <style name="IconOnlyButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">30dp</item>
    </style>

</resources>
